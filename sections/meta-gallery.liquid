{% render 'custom-product-gallery' , heading : section.settings.heading , image_pos : section.settings.image_pos , block : section.blocks %}
{% schema %}
  {
    "name": "Meta gallery",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading"
      },
      {
        "type" : "select",
        "id" : "image_pos",
        "label" : "Image Position",
        "options":[
          {
            "value" : "left",
            "label" : "left"
          },
          {
            "value" : "right",
            "label" : "Right"
          }
        ]
      }
    ],
    "blocks" : [
      {
        "type" : "size-chart",
        "name" : "Size chart option",
        "settings" :[
          {
            "type" : "text",
            "id" : "tagtext",
            "label" : "Add product tag"
          },
          {
            "type" : "image_picker",
            "id" : "size_chart",
            "label" : "Size chart"
          }
        ]
      }
    ],
    "enabled_on": {
      "templates": ["product"]
    },
    "presets":[
     { 
       "name" : "Meta Gallery"
     }
    ]
  }
{% endschema %}

