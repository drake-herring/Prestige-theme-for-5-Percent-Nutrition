  <header class="PageHeader">
    <div class="SectionHeader SectionHeader--center">
<h1 style="color:#fff;" class="text-uppercase product-h2 js-reviews-heading t-lef SectionHeader__Heading Heading u-h1">{{ page.title }}</h1>
    </div>
  </header>

{%- capture flickity_options -%}
{
  "prevNextButtons": false,
  "pageDots": {% if section.blocks.size > 1 %}true{% else %}false{% endif %},
  "setGallerySize": true,
  "wrapAround": true,
  "watchCSS": true,
  "dragThreshold": 8
}
{%- endcapture -%}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="collection-list">
  <div class="FlexboxIeFix flex-wrap athelete-collection {% if section.settings.add_spacing %}CollectionList--spaced{% endif %}" data-flickity-config='{{ flickity_options }}'>
    {%- for block in section.blocks -%}
      {%- assign collection = collections[block.settings.collection] -%}
      {%- include 'Athletes', collection: collection, apply_overlay: block.settings.apply_overlay -%}
    {%- endfor -%}
  </div>

</section>


<header class="PageHeader retail-bottom">
<div class="SectionHeader SectionHeader--center">
  <h2 class="retail-title SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1">BECOME A SPONSORED <nobr>TEAM MEMBER</nobr></h2>
      <div align="center">
      <a href="https://5percent-nutrition.myshopify.com/pages/become-an-athlete" class="apply-now-button CollectionItem__Link ProductForm__AddToCart">APPLY NOW</a>
      </div>
 </div>
</header>




<style>
    #section-{{ section.id }} .CollectionItem .Heading,
  #section-{{ section.id }} .flickity-page-dots {
    color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CollectionItem__Link {
    color: {{ section.settings.button_color }};
    border-color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CollectionItem__Link::before {
    background-color: {{ section.settings.text_color }};
  }

  @media (-moz-touch-enabled: 0), (hover: hover) {
    #section-{{ section.id }} .CollectionItem__Link:hover {
      color: {{ section.settings.text_color }};
    }
  }
  
  .athletes_h1 { 
    font-size: 45px;
    margin-top:20px
    line-height: 45px;
  }

  .athletes-title-divider {
      width: 70px;
      height: 5px;
      background-color: #AE1F24;
      margin: 30px 0 50px 0;
  }

.retail-title {
  @include font-family("AcuminProBold");
  @include font-size(16);
  line-height: 20px;
  font-weight:bold;
  color:#fff;

}

.retail-note {
  margin-top:25px;
  margin-bottom:25px;
}
.retail-bottom { 
  background:#131111;
/*  margin-bottom:-120px; */
}
  

</style>

